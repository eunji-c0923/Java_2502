package ch01.ex03;

public class incraseExample {

	public static void main(String[] args) {
        //증감연산자 ++
		//감소연산자 --
		
		int a =0;
		System.out.println(a);
		
		a = a+1;
		System.out.println(a);
		
		a = a+1;
		System.out.println(a);
		
		
		int b =0;
		System.out.println();
		System.out.println(b);
		++b;  //b = b+1 ,전산자 앞에 있을때 전위라고 함
		System.out.println(b);
		b++;  // b = b+1 전산자 뒤에 있을때 후의라고 함
		System.out.println(b);
		
		}

}
